
@{
    ViewBag.Title = "Index";
}
@{
    Layout = "~/Views/Shared/Dashboard.cshtml";
}
<style>

    .text {
        font-family: raleway;
        font-size: 40px;
        position: absolute center;
        text-align: center;
        padding-left: 0%;
        color: #000;
        margin-top: 43px;
    }

    .text1 {
        font-family: raleway;
        font-size: 21px;
        text-align: center;
        margin-top: -20px;
        color: darkblue;
    }

    .image {
        text-align: center;
        width: 200px;
        /* Container's dimensions */
        height: 200px;
        /*-webkit-border-radius: 75%;
        -moz-border-radius: 75%;*/
        box-shadow: 0 0 0 1px #eee;
        background-size: cover;
        margin: auto;
        margin-top: 20px;
        margin-bottom: -30px;
        align-content: center;
    }



    .trick {
        display: inline-block;
        vertical-align: middle;
        height: 150px;
    }

    .image:hover {
        box-shadow: 0px 5px 20px .9px #3F3F3F;
    }

    .image:hover {
        -webkit-transform: scale(1.12);
        transform: scale(1.12);
        -webkit-transition: 1.6s ease-in-out;
        transition: 1.6s ease-in-out;
    }



    .trick:hover img {
        -webkit-transform: scale(1);
        transform: scale(1);
    }
    /*
    #overlay {
        -webkit-border-radius: 50%;
        -moz-border-radius: 50%;
        padding: 0 0 0 0;
        opacity: 1.0;
        -webkit-transition: opacity 2.25s ease;
        -moz-transition: opacity 10.25s ease;
    }*/

    #box:hover #overlay {
        opacity: 1;
    }

    .profile_picture{
        width: auto;
        height: 100%;
    }


</style>
</head>

<div class="panel-default">
    <div id="overlay">
        <div class="image">
            <div class="trick">
                @if (ViewBag.Picture == false)
                {
                    <img src="~/Content/images/no_profile_picture.png" alt="Profile photo">
                    <br /><br />
                    <a class="btn btn-info" href="/Profiles/NewProfilePicture/"> Adauga poza de profil!</a>
                    <br />
                }
                else
                {
                    string fileName = ViewBag.UserId + ".jpeg";
                    <img class="profile_picture" src="~/Content/profilePictures/@fileName" alt="Profile photo" />
                    <br /><br />
                    <a class="btn btn-info" href="/Profiles/NewProfilePicture/"> Editeaza poza de profil!</a>
                    <br />
                }

            </div>
        </div>
        <br /><br /><br /><br />
        <ul class="text" style="color: darkblue">@ViewBag.User.FirstName @ViewBag.User.LastName</ul>
        <br />
        @if (ViewBag.Birthday == 1)
        {
            <div class="text1">
                <h3 class="text1">HAPPY BIRTHDAY!</h3>
            </div>
            <br />
        }
        <div class="text1">
            @if (ViewBag.ProfileDescription != null)
            {
                <h5 style="text-align:center; font-size:20px;color:darkblue"><strong>~@ViewBag.ProfileDescription~</strong></h5>
                <br />
            }
            else
            {
                <a class="btn btn-info" href="/Profiles/Edit/"> Adauga descriere</a>
                <br />
                <br />
            }
        </div>
        
    </div>
</div>
