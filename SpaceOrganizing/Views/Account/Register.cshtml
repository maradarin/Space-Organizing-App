@model SpaceOrganizing.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}

<!--===============================================================================================-->
<link rel="icon" type="image/png" href="/Content/images/icons/favicon.ico" />
<!--===============================================================================================-->
<link rel="stylesheet" type="text/css" href="/Content/vendor/bootstrap/css/bootstrap.min.css">
<!--===============================================================================================-->
<link rel="stylesheet" type="text/css" href="/Content/fonts/font-awesome-4.7.0/css/font-awesome.min.css">
<!--===============================================================================================-->
<link rel="stylesheet" type="text/css" href="/Content/vendor/animate/animate.css">
<!--===============================================================================================-->
<link rel="stylesheet" type="text/css" href="/Content/vendor/css-hamburgers/hamburgers.min.css">
<!--===============================================================================================-->
<link rel="stylesheet" type="text/css" href="/Content/vendor/select2/select2.min.css">
<!--===============================================================================================-->
<link rel="stylesheet" type="text/css" href="/Content/cssRegister/util.css">
<link rel="stylesheet" type="text/css" href="/Content/cssRegister/main.css">
<!--===============================================================================================-->
@Styles.Render("~/template/cssRegister")
@Styles.Render("~/template/css")
<div class="header">
    <div class="container">
        <div class="limiter">
            <div class="container-login100">
                <div class="wrap-login100">
                    <div class="login100-pic js-tilt" data-tilt>
                        <img src="/Content/images/img-01.png" alt="IMG">
                    </div>
                    <span class="login100-form-title">
                        Register
                    </span>

                    <br />
                    @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "login100-form validate-form", role = "form" }))
                    {
                        @Html.AntiForgeryToken()

                        @Html.ValidationSummary("", new { @class = "text-danger" })

                        @Html.LabelFor(m => m.LastName, new { @class = "col-md-2 control-label" })
                        <div class="wrap-input100 validate-input" data-validate="Last name is required">
                            @Html.TextBoxFor(m => m.LastName, new { @class = "input100" })
                            <span class="focus-input100"></span>
                            <span class="symbol-input100">
                                <i aria-hidden="true"></i>
                            </span>
                        </div>

                        @Html.LabelFor(m => m.FirstName, new { @class = "col-md-2 control-label" })
                        <div class="wrap-input100 validate-input" data-validate="FirstName is required">
                            @Html.TextBoxFor(m => m.FirstName, new { @class = "input100" })
                            <span class="focus-input100"></span>
                            <span class="symbol-input100">
                                <i aria-hidden="true"></i>
                            </span>
                        </div>

                        @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })
                        <div class="wrap-input100 validate-input" data-validate="Valid email is required: ex@abc.xyz">

                            @Html.TextBoxFor(m => m.Email, new { @class = "input100" })
                            <span class="focus-input100"></span>
                            <span class="symbol-input100">
                                <i class="fa fa-envelope" aria-hidden="true"></i>
                            </span>
                        </div>

                        @Html.LabelFor(m => m.Birthday, new { @class = "col-md-2 control-label" })
                        <div class="wrap-input100 validate-input">


                            <!--input class="text-box single-line input100" data-val="true" data-val-date="The field Date of Birth must be a date." id="DOB" name="DOB" type="date" value=""-->
                            <div style="margin-left:100px">
                                @Html.EditorFor(m => m.Birthday, new { @type = "date", @class = "text-box single-line input100" })
                            </div>
                            <span class="focus-input100"></span>
                            <span class="symbol-input100">

                            </span>
                        </div>

                        @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })
                        <div class="wrap-input100 validate-input" data-validate="Password is required">

                            @Html.PasswordFor(m => m.Password, new { @class = "input100" })
                            <span class="focus-input100"></span>
                            <span class="symbol-input100">
                                <i class="fa fa-lock" aria-hidden="true"></i>
                            </span>
                        </div>

                        @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-2 control-label" })
                        <div class="wrap-input100 validate-input" data-validate="Password is required">

                            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "input100" })
                            <span class="focus-input100"></span>
                            <span class="symbol-input100">
                                <i class="fa fa-lock" aria-hidden="true"></i>
                            </span>
                        </div>

                        <div class="container-login100-form-btn">

                            <input type="submit" class="login100-form-btn" value="Register" />

                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
</div>

<div class="copyright">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <p>© 2021 All Rights Reserved.</p>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}





<!--===============================================================================================-->
<script src="/Content/vendor/jquery/jquery-3.2.1.min.js"></script>
<!--===============================================================================================-->
<script src="/Content/vendor/bootstrap/js/popper.js"></script>
<script src="/Content/vendor/bootstrap/js/bootstrap.min.js"></script>
<!--===============================================================================================-->
<script src="/Content/vendor/select2/select2.min.js"></script>
<!--===============================================================================================-->
<script src="/Content/vendor/tilt/tilt.jquery.min.js"></script>
<script>
    $('.js-tilt').tilt({
        scale: 1.1
    })
</script>
<!--===============================================================================================-->
<script src="/Content/js/main.js"></script>

