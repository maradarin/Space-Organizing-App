@model SpaceOrganizing.Models.Tasks

@{
    ViewBag.Title = "Show";
}
@{
    Layout = "~/Views/Shared/Dashboard.cshtml";
}
<br />
<p class="text-info">@ViewBag.Message</p>

<a href="/Groups/Show/@Model.GroupId">Inapoi la echipa</a>
<br />

<br />
<div class="container">
    <div class="jumbotron">
        <p class="display-3">@Model.Title</p>
        Descriere task: <p class="lead">@Model.Description</p>
        Prioritate: <strong>@Model.Priority</strong>
        <hr class="my-4">
        <p>Creat de: @Model.User.UserName</p>
        <span class="label label-info">Deadline: @Model.Deadline</span>
        <p>Done: @Model.Done</p>
        @if (@Model.User2 != null)
        {
            <p>Asignat lui: @Model.User2.UserName</p>
            <br />
        }
        <p class="lead" style="margin-top:2rem">
            <div style="display: inline-block; float : left; margin-right: 15px">
                <a class="btn btn-primary btn-lg" style="padding:1rem" href="/Taskss/Edit/@Model.TaskId">Modifica task</a>
            </div>

            @if (ViewBag.esteOrganizator || ViewBag.esteAdmin)
            {
                <div style="display: inline-block; float : left">
                    <form method="post" action="/Taskss/Delete/@Model.TaskId">
                        @Html.HttpMethodOverride(HttpVerbs.Delete)

                        <button class="btn btn-primary btn-lg" style="padding:1rem" type="submit">Sterge task</button>
                    </form>
                </div>

            }
        </p>
    </div>

</div>
<hr />